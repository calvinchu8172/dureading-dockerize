.note.comment_bg
  .note_container

    .row.edit-book-logo
      .col-md-12
        - if @book.logo.exists? 
          = link_to image_tag( @book.logo.url(:medium) ), @book.logo.url
        - else
          = link_to image_tag( "missing.png" ), book_path(@book)

    .row.book-details
      .col-md-6
        = 'Title:' 
      .col-md-6
        = @book.title
      .col-md-6
        = 'Arthor:' 
      .col-md-6
        = @book.author
      .col-md-6
        = 'ISBN:'
      .col-md-6
        = @book.isbn
      .col-md-6
        = 'Description:'
      .col-md-6
        = simple_format @book.description
    
    .row
      .comment_wrapper
        - @book.comments.each do |c|
          .each_comment_wrapper
            .comment_content
              = simple_format c.content
              - if c.photo.exists?
                .comment_image
                  = link_to image_tag(c.photo.url(:thumb)), c.photo.url
          .arrow  
          .comment_user_date_delete_wrapper
            = link_to c.user.name, user_path(c.user)
            said on
            = c.created_at.strftime("%d %b. %Y at %H:%M")

            - if (c.user == current_user)
              = button_to "Delete", book_comment_path(@book, c), :method => :delete, class: 'btn btn-default'


    .row.add-comment
      .col-md-12
        = form_for Comment.new, :url => book_comments_path(@book), :html => { :multipart => true, :class => "form-horizontal center" } do |f|

          .form-group
            .col-md-4
              = f.label :photo, "Add a picture.", class: "control-label"
            .col-md-8
              = f.file_field :photo
          .form-group
            .col-md-4
              = f.label :content, "Write a comment.", class: "control-label"
            .col-md-8
              = f.text_area :content, class: "form-control"
        
          = f.submit "Reply", class: 'btn btn-default'
