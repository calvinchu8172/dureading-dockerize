<!DOCTYPE html>
<html>
  <head>
    <title>DùReading</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>

  </head>
  <body>

  <div class="header">
    <div class="header_wrapper">
      <div class="du_login">
          <%= link_to image_tag("du_logo.png", :size => "80x80", :alt => "du_logo"), root_path, :title => "To Main Page" %>
      </div>
      <div class="dureading">
           DùReading
      </div>
    
      <div class="my_all_books">
        <%= link_to image_tag("all_books.png", :size => "60x60", :alt => "all_book"), books_path, :title => "All books" %>
      </div>

        <% if current_user %>
          <div class="my_shelf">
          <%= link_to image_tag("my_book.png", :size => "60x60", :alt => "my_book"), user_path(current_user), :title => "My books"  %>
          </div>
        <% end %>
       
      <%# if current_user == @user %>
      <% if current_user %>
      <div class="add_book">
        <%= link_to image_tag("add_book.png", :size => "60x60", :alt => "add_book"), new_book_path, :title => "Add new book"  %>
      </div>
      <% end %>


      <div class="fb_wrapper">
        <%= link_to image_tag("fb_icon.png", :size => "80x80", :alt => "du_logo"), "https://www.facebook.com/dureading", :title => "To DUreading FB Page", target: :_blank %>
      <% if current_user %>
        <div class="fb_user">
        Hi, <%= current_user.name %>
        <%= link_to "登出", auth_signout_path, :method => :delete, :title => "Log out"  %>
      <% else %>
        <div class="fb_user_link"><%= link_to "Facebook 登入", "/auth/facebook", :title => "Log in" %></div>
      <% end %>
        </div>
      </div>

    </div>
  </div>

  <% if flash[:alert] %>
    <p><%= flash[:alert] %></p>
  <% end %>

  <%= yield %>

  </body>
</html>
